<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:ignore="RtlHardcoded,RtlSymmetry">

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:hint="@string/enter_name"
        android:inputType="textCapSentences"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="Название сравнения 123" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/criteria_wieght"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/decrease_criteria_weight"
        android:src="@drawable/ic_remove_circle_outline_32dp" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:maxLength="3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="123" />

    <ImageView
        android:id="@+id/increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/increase_criteria_weight"
        android:src="@drawable/ic_add_circle_outline_32dp" />

    <ImageView
        android:id="@+id/handle"
        android:layout_width="?listPreferredItemHeight"
        android:layout_height="match_parent"
        android:contentDescription="@string/reorder"
        android:scaleType="center"
        android:src="@drawable/ic_reorder_24dp"
        tools:ignore="RtlHardcoded" />
</LinearLayout>